<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favourite.FavouriteTvFragment"
    android:orientation="vertical"
    android:id="@+id/fav_tv_layout">
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/image_backdrop"
        android:src="@drawable/ic_search_illustration" />
    <TextView
        android:id="@+id/illustration_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_favourite_tv"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fav_rv_tv"
        android:visibility="gone"/>

</LinearLayout>